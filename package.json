{
  "name": "gallery-king",
  "productName": "galleryKing",
  "version": "1.0.6",
  "description": "galleryKing",
  "main": "dist/index.js",
  "scripts": {
    "start": "tsc && electron-forge start",
    "package": "tsc && electron-forge package",
    "make": "tsc && electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts .",
    "dev": "nodemon ."
  },
  "keywords": [],
  "author": {
    "name": "ben",
    "email": "moon791017@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./assets/icon.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "gallery_king"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-wix",
          "config": {
            "appIconPath": "./assets/icon.ico",
            "language": "1028"
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "background": "./assets/icon.png",
            "format": "ULFO"
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-wix": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@types/electron-is-dev": "^1.1.1",
    "@types/jquery": "^3.5.14",
    "@types/node-notifier": "^8.0.2",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "electron": "19.0.3",
    "electron-wix-msi": "^4.0.0",
    "eslint": "^8.17.0",
    "eslint-plugin-import": "^2.26.0",
    "nodemon": "^2.0.16",
    "typescript": "~4.7.3"
  },
  "dependencies": {
    "@electron-forge/maker-dmg": "^6.0.0-beta.63",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "jquery": "^3.6.0",
    "node-notifier": "^10.0.1"
  }
}
